{
  "name": "orca-sonhos-front",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:test": "ng build --configuration test",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "storybook": "ng run orca-sonhos-front:storybook",
    "build-storybook": "ng run orca-sonhos-front:build-storybook",
    "docs:json": "npx @compodoc/compodoc -p .storybook/tsconfig.doc.json -e json -d . --disableSourceCode --disableGraph --disableCoverage --disablePrivate --disableInternal --disableLifeCycleHooks --disableRoutesGraph --disableSearch --disableTemplateTab --disableStyleTab",
    "docs:clean": "rm -f documentation.json",
    "deploy": "npm run build:prod && firebase deploy",
    "deploy:hosting": "npm run build:prod && firebase deploy --only hosting",
    "firebase:init": "firebase login && firebase init hosting"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.2.0",
    "@angular/material": "^20.2.3",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "chart.js": "^4.5.1",
    "firebase": "^11.10.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.5",
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@compodoc/compodoc": "^1.1.31",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/angular": "^9.1.10",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@vitest/coverage-v8": "^3.2.4",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "eslint-plugin-boundaries": "^5.0.2",
    "eslint-plugin-storybook": "^9.1.10",
    "jasmine-core": "~5.9.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.5",
    "storybook": "^9.1.10",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0",
    "vitest": "^3.2.4"
  }
}
